# Uncomment the following line to opt out
# opt_out_usage

# If you want to automatically update fastlane if a new version is available:
# update_fastlane

# This is the minimum version number required.
# Update this, if you use features of a newer version
fastlane_version "1.30.2"

default_platform :ios


platform :ios do
  before_all do
    # ENV["SLACK_URL"] = "https://hooks.slack.com/services/..."
    
    
    # increment_build_number

    # gym(scheme: "FennecAurora") # Build your app - more options available

    # xctool # run the tests of your app
  end

  desc "Builds an Aurora build for l10n"
  lane :l10n do
    ENV["SIGH_TEAM_ID"] = "9G8J6YA743"

    sigh(app_identifier: "org.mozilla.ios.FennecAurora",
      output_path: "./provisioning-profiles/" )
    sigh(app_identifier: "org.mozilla.ios.FennecAurora.SendTo",
      output_path: "./provisioning-profiles/")
    sigh(app_identifier: "org.mozilla.ios.FennecAurora.ShareTo",
      output_path: "./provisioning-profiles/" )
    sigh(app_identifier: "org.mozilla.ios.FennecAurora.ViewLater",
      output_path: "./provisioning-profiles/" )


    build_number = ENV["BUILD_VERSION"] || get_build_number(xcodeproj: "Client.xcodeproj")
    increment_build_number(build_number: build_number)

    version = ENV["APP_VERSION"] || get_version_number(xcodeproj: "Client.xcodeproj")
    increment_version_number(version_number: version)

    datestamp = ENV["DATESTAMP"] || Time.now.utc.iso8601.gsub(/\W/, '')
    puts datestamp

    output_name = "firefox-ios-l10n-"+ version +"("+ build_number +")-"+ datestamp +".ipa"
    puts output_name
    gym(scheme: "FennecAurora",
      output_directory: "./builds/",
      output_name: output_name,
      sdk: "iphoneos",
      include_symbols: true,
      include_bitcode: false)

  end


  desc "Makes a release build and takes marketing snapshots"
  lane :marketing do
    snapshot
    frameit(white: true)
  end

  after_all do |lane|
    # This block is called, only if the executed lane was successful
    
    # slack(
    #   message: "Successfully deployed new App Update."
    # )
  end

  error do |lane, exception|
    # slack(
    #   message: exception.message,
    #   success: false
    # )
  end
end
